<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Target.MainPage"
             BackgroundColor="#2b2b2b">
    <ContentPage>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Margin="5,7.5,5,5">
                <Label Text="Title placeholder" TextColor="White" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="30" />
            </StackLayout>
            <ScrollView Grid.Row="1">
                <StackLayout Orientation="Vertical" Padding="10,24,10,24" Spacing="5">
                    <Button Margin="0,10,0,0" Text="Object 1"
                        Clicked="AddMilestone"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 2"
                        Clicked="AddMilestone"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 3"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 4"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 5"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 6"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 7"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 8"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 9"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 10"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 11"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 12"
                        Command="{Binding AddMilestone}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                </StackLayout>
            </ScrollView>
            <StackLayout Grid.Row="2" Margin="5,7.5,5,5">
                <Button
                    Clicked="Button_Clicked"
                    Text="+"
                    BackgroundColor="DarkOrange"
                    TextColor="White"
                    WidthRequest="40" 
                    HeightRequest="60" 
                    BorderRadius="10"
                    Padding="10"
                    />
            </StackLayout>
        </Grid>
    </ContentPage>

</CarouselPage>
