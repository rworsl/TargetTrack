<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Target.MainPage"
             BackgroundColor="#2b2b2b">

    <ContentPage>
        <StackLayout>
            <Frame BackgroundColor="#4e4e4e" Padding="24" CornerRadius="0">
                <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Frame>
                <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>
            </Frame>
        </StackLayout>
    </ContentPage>

    <ContentPage>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="1">
                <StackLayout Orientation="Vertical" Padding="10,24,10,24" Spacing="5">
                    <Button Margin="0,10,0,0" Text="Object 1"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 2"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 3"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 4"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 5"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 6"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 7"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 8"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 9"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 10"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 11"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                    <Button Margin="0,10,0,0" Text="Object 12"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="#3d3d3d"
                        TextColor="White"
                        HeightRequest="80"
                        BorderRadius="10" />
                </StackLayout>
            </ScrollView>
            <StackLayout Grid.Row="2" Margin="5,7.5,5,5">
                <Button
                    Clicked="Button_Clicked"
                    Text="+"
                    BackgroundColor="DarkOrange"
                    TextColor="White"
                    WidthRequest="40" 
                    HeightRequest="60" 
                    BorderRadius="10"
                    Padding="10"
                    />
            </StackLayout>
        </Grid>
    </ContentPage>

</CarouselPage>
